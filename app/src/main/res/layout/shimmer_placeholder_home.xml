<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_weight="10"
    android:layout_marginHorizontal="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvProducts"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:backgroundTint="#D7B3B3B3"
        app:strokeColor="#B46C6C6C"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        app:strokeWidth="0.5dp"
        android:outlineAmbientShadowColor="@color/material_blue_light"
        android:outlineSpotShadowColor="@color/material_blue_light"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp">

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvProducts2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:backgroundTint="#D7B3B3B3"
        android:layout_weight="1"
        app:strokeColor="#B46C6C6C"
        app:strokeWidth="0.5dp"
        android:outlineAmbientShadowColor="@color/material_blue_light"
        android:outlineSpotShadowColor="@color/material_blue_light"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp">

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
